
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
end_of_line = lf
indent_size = 4
charset = utf-8

[*.js]
indent_size = 4

[*.json]
indent_size = 2

[*.tpl]
indent_size = 2

[*.{scss, css}]
indent_size = 2

[*.{php, php.copy}]
indent_size = 4

[.xml]
indent_size = 4

[.md]
indent_size = 2
